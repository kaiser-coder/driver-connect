<div class="row">
  <div class="col-12 py-5">
    <h4>Gestion des clients</h4>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="grid">
      <p class="grid-header">Liste des clients</p>
      <div class="grid-body">
        <div class="item-wrapper">
          <div class="row mb-3">
            <div class="col-md-12 mx-auto" ng-app="myapp">
              <table class="table table-striped ng-data-table" style="width:100%">
                <thead>
                  <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Tél</th>
                    <th>Adresse</th>
                    <th>Email</th>
                    <th>Statut</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
						<% clients.forEach((client) => { %>
                  <tr>
							<td><%= client.firstName %></td>
							<td><%= client.lastName %></td>
                    <td><%= client.phoneNumber %></td>
                    <td><%= client.address %></td>
                    <td><%= client.email %></td>
                    <td><%= client.state %></td>
                    <td class="actions">
							<div class="btn-group">
								<button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
									aria-expanded="false">
									Action
								</button>
								<div class="dropdown-menu">
									<a class="dropdown-item" href="#">Envoyer un push</a>
									<a class="dropdown-item" href="#">Tarif</a>

									<a class="dropdown-item" href="/clients/state/<%= client.id %>">
										<%= action = client.state == 'active' ? 'Désactiver' : 'Activer'  %>
									</a>

									<a class="dropdown-item" href="#">Envoyer un email</a>
									<div class="dropdown-divider"></div>
									<%- partial('../../partials/confirm_delete.ejs') %>
								</div>
							</div>
                    </td>
                  </tr>
						<% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
